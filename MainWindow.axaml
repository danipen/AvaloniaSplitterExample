<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaSplitterExample.MainWindow"
        Title="AvaloniaSplitterExample">
    <Grid ColumnDefinitions="* Auto * Auto *">
        <DockPanel Background="Salmon" Grid.Column="0" Name="mLeftEditorPanel"/>
        <GridSplitter Grid.Column="1" Width="50" Background="LightGray" />
        <DockPanel Background="Salmon" Grid.Column="2" Name="mBaseEditorPanel"/>
        <GridSplitter Grid.Column="3" Width="50" Background="LightGray" />
        <DockPanel Background="Salmon" Grid.Column="4" Name="mRightEditorPanel"/>
    </Grid>
</Window>
